            "fieldset": "Status Bar",
            "description": "A status bar configuration for the item card",
            "icon": "info_outline",
            "display": "list",
            "non-repeat": {
              "showItemState": {
                "type": "Select",
                "config": {
                  "label": "Show item state",
                  "options": [
                    "True",
                    "False"
                  ],
                  "default_value": "True"
                }
              },
              "isFloating": {
                "type": "Select",
                "config": {
                  "label": "Is floating",
                  "options": [
                    "No",
                    "Yes - From Top",
                    "Yes - From Bottom"
                  ],
                  "default_value": "No"
                }
              }
            },
            "repeat": {}
          },
          "image": {
            "type": "Slice",
